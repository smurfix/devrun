{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://evc.m-o-a-t.org/schema/charger/descr.json",
  "title" : "data describing a charger",

  "type": "object",
  "properties": {
    "name":      { "type": "string", "doc": "an identifier for this charger" },
    "conn":      { "type": "string", "doc": "the connector used for talking to the charger" },
    "conn_pos":  { "type": "string", "doc": "the charger's identifier at the connector" },
    "meter":     { "type": "string", "doc": "the meter in front of this charger" },
    "meter_pos": { "type": "string", "doc": "the charger's identifier at the connector" },
    "max_amp":   { "type": "number", "doc": "max amperage of this charger"},
  "additionalProperties": false,
  "required": ["name", "conn", "conn_pos"]
  }
}
